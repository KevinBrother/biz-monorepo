{
  "name": "biz-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "storybook:ui": "cd packages/ui && pnpm run storybook",
    "storybook:components": "cd packages/react-components && pnpm run storybook",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "turbo test",
    "test:watch": "turbo test -- --watch",
    "check-deps": "node scripts/check-deps.js",
    "upgrade-deps": "pnpm up --latest",
    "reset": "pnpm run clean && rm -rf node_modules **/node_modules && pnpm install"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "prettier": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "packageManager": "pnpm@9.12.3"
}
